@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<h2>Nama: Rizka Dandi Maulana</h2>

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Input Data</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }

            .form-group label {
                width: 80px;
            }

            .form-group input {
                flex: 1;
            }

        .input-container {
            display: flex;
            align-items: center;
        }

        .btn-simpan {
            margin-left: 10px;
        }

        .search-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            margin-top: 10px;
        }

        th, td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                <div class="form-group">
                    <label>Nama:</label>
                    <input type="text" name="Nama" class="form-control">
                </div>
                <div class="form-group">
                    <label>Alamat:</label>
                    <input type="text" name="Alamat" class="form-control">
                </div>
                <div class="form-group">
                        <label>Umur:</label>
                        <input type="number" name="Umur" class="form-control">
                </div>

                <div class="d-flex justify-content-end">
                        <button class="btn btn-primary btn-simpan" type="submit">SIMPAN</button>
                </div>
                </form >
            </div>
        </div>

        <div class="search-container">
            <label for="searchBox" class="me-2">Cari:</label>
            <input type="text" id="searchBox" class="form-control w-auto" onkeyup="searchTable()">
        </div>

        <table class="table table-bordered" id="dataTable">
            <thead class="table-dark">
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Alamat</th>
                    <th>Umur</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                    @if (Model.listClients.Any())
                    {
                        int index = 1;
                        @foreach (var item in Model.listClients)
                        {
                        <tr>
                            <td>@index</td>
                            <td>@item.Nama</td>
                            <td>@item.Alamat</td>
                            <td>@item.Umur</td>
                        </tr>
                            index++;
                        }
                    }
                    else
                    {
                    <tr>
                        <td colspan="4">Data tidak tersedia</td>
                    </tr>
                    }
            </tbody>
            </tbody>
        </table>
    </div>

    <script>
        function searchTable() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchBox");
            filter = input.value.toUpperCase();
            table = document.getElementById("dataTable");
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) {
                tdNama = tr[i].getElementsByTagName("td")[1];
                tdAlamat = tr[i].getElementsByTagName("td")[2];

                if (tdNama || tdAlamat) {
                    txtValueNama = tdNama.textContent || tdNama.innerText;
                    txtValueAlamat = tdAlamat.textContent || tdAlamat.innerText;

                    if (txtValueNama.toUpperCase().indexOf(filter) > -1 || txtValueAlamat.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
</body>
</html>
